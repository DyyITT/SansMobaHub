--// Error UI (Script Down Screen)
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.IgnoreGuiInset = true
ScreenGui.ResetOnSpawn = false

local Frame = Instance.new("Frame", ScreenGui)
Frame.AnchorPoint = Vector2.new(0.5, 0.5)
Frame.Position = UDim2.fromScale(0.5, 0.5)
Frame.Size = UDim2.fromOffset(420, 180)
Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Frame.BorderSizePixel = 0
Frame.BackgroundTransparency = 0.1
Frame.Visible = false

local UIStroke = Instance.new("UIStroke", Frame)
UIStroke.Thickness = 2
UIStroke.Color = Color3.fromRGB(255, 40, 40)
UIStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

local UICorner = Instance.new("UICorner", Frame)
UICorner.CornerRadius = UDim.new(0, 12)

local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.fromScale(1, 0.35)
Title.Position = UDim2.fromScale(0, 0)
Title.BackgroundTransparency = 1
Title.Text = "⚠️ Script Down"
Title.TextColor3 = Color3.fromRGB(255, 60, 60)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 26

local Message = Instance.new("TextLabel", Frame)
Message.Size = UDim2.fromScale(1, 0.45)
Message.Position = UDim2.fromScale(0, 0.35)
Message.BackgroundTransparency = 1
Message.Text = "Service sedang error, coba lagi nanti!"
Message.TextColor3 = Color3.fromRGB(230, 230, 230)
Message.Font = Enum.Font.Gotham
Message.TextScaled = false
Message.TextSize = 18

local Button = Instance.new("TextButton", Frame)
Button.Size = UDim2.fromOffset(140, 40)
Button.AnchorPoint = Vector2.new(0.5, 1)
Button.Position = UDim2.fromScale(0.5, 0.95)
Button.Text = "Oke"
Button.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
Button.TextColor3 = Color3.fromRGB(255, 255, 255)
Button.Font = Enum.Font.GothamBold
Button.TextSize = 20

local ButtonCorner = Instance.new("UICorner", Button)
ButtonCorner.CornerRadius = UDim.new(0, 10)

Button.MouseButton1Click:Connect(function()
    Frame.Visible = false
end)

--// FUNCTION PEMANGGIL
function ShowErrorUI(msg)
    Message.Text = msg or "Service sedang error atau maintenance."
    Frame.Visible = true
end

--// Contoh pemanggilan otomatis
ShowErrorUI("Server sedang gangguan")
